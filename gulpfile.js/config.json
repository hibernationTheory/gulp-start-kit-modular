{
  "root": {
    "src": "./src",
    "tempDest":"./.tmp",
    "buildDest":"./build"
  },

  "tasks": {
    "browserify":{
      "entries": "./src/js/main.js",
      "bundleName":"bundle.js",
      "debug":true,
      "transform":["babelify"]
    },
    "browserSync": {
      "server": {
        "baseDir": "build"
      }
    },
    "static": {
      "src": "./",
      "dest": "./"
    },
    "css": {
      "src": "css",
      "dest": "css",
      "autoprefixer": {
        "browsers": [
          "ie >= 10",
          "ie_mob >= 10",
          "ff >= 30",
          "chrome >= 34",
          "safari >= 7",
          "opera >= 23",
          "ios >= 7",
          "android >= 4.4",
          "bb >= 10"
        ]
      },
      "extensions": ["sass", "scss", "css"],
      "sass": {
      }
    },
    "js": {
      "src": "js",
      "dest": "js",
      "extensions": ["js"]
    }
  }
}
